{
  "manifest_version": 2,
  "name": "__MSG_ExtensionName__",
  "description": "__MSG_ExtensionDescription__",
  "version": "0.87.0",
  "author": "Danny Lin",
  "default_locale": "en",

  "browser_specific_settings": {
    "gecko": {
      "id": "webscrapbook@danny0838.addons.mozilla.org",
      "strict_min_version": "52.0"
    }
  },

  "homepage_url": "https://github.com/danny0838/webscrapbook",

  "icons": {
    "32": "core/scrapbook_32.png",
    "128": "core/scrapbook_128.png"
  },

  "permissions": [
    "contextMenus",
    "downloads",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "scripts": [
      "core/common.js",
      "core/optionsAuto.js",
      "core/extension.js",
      "core/background.js",
      "capturer/background.js",
      "scrapbook/server.js",
      "scrapbook/background.js",
      "editor/background.js",
      "viewer/background.js"
    ]
  },

  "web_accessible_resources": [
    "resources/*",
    "viewer/load.html"
  ],

  "options_ui": {
    "browser_style": true,
    "open_in_tab": true,
    "page": "core/options.html"
  },

  "browser_action": {
    "default_icon": {
      "32": "core/scrapbook_32.png",
      "128": "core/scrapbook_128.png"
    },
    "default_title": "__MSG_ExtensionName__",
    "default_popup": "core/browserAction.html"
  },

  "page_action": {
    "default_icon": {
      "32": "core/scrapbook_32.png",
      "128": "core/scrapbook_128.png"
    },
    "default_title": "__MSG_ExtensionName__",
    "default_popup": "core/browserAction.html"
  },

  "sidebar_action": {
    "default_title": "__MSG_ExtensionName__",
    "default_panel": "scrapbook/sidebar.html",
    "default_icon":  {
      "32": "core/scrapbook_32.png",
      "128": "core/scrapbook_128.png"
    },
    "open_at_install": false
  },

  "commands": {
    "openScrapBook": {
      "description": "__MSG_OpenScrapBook__"
    },
    "openOptions": {
      "description": "__MSG_OpenOptions__"
    },
    "openViewer": {
      "description": "__MSG_OpenViewer__..."
    },
    "openSearch": {
      "description": "__MSG_OpenSearch__..."
    },
    "searchCaptures": {
      "description": "__MSG_SearchCaptures__"
    },
    "captureTab": {
      "description": "__MSG_CaptureTab__"
    },
    "captureTabSource": {
      "description": "__MSG_CaptureTabSource__"
    },
    "captureTabBookmark": {
      "description": "__MSG_CaptureTabBookmark__"
    },
    "editTab": {
      "description": "__MSG_EditTab__"
    },
    "batchCapture": {
      "description": "__MSG_BatchCapture__..."
    }
  }
}
